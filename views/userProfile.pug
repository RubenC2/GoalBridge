doctype html
html
  head
    title GoalBridge - Bienvenido
    link(rel="stylesheet" href="/css/style.css")
  body(class="profile-background")
    include header

    main(class="profile-background")
      .container
        .left-section
          section.job-search
            h3 Buscar ofertas de trabajo
            form(id="search-form", method="GET")
              input(type="text" name="query" id="search-input" placeholder="Buscar empleo..." required)
              button(type="submit") Buscar

        .center-section
          section.favorites
            h3 Tus Favoritos
            .favorite-item
              p Nombre: #[span#nombre]
              p Correo: #[span#correo]
              button.remove-button
                i(class="fa fa-trash") Eliminar
              // Aquí puedes agregar más elementos de favoritos

        .right-section
          section.recent-posts
            h3 Publicaciones más recientes
            #offers-container
              p Esperando resultados...
              // Aquí se agregarán dinámicamente las ofertas de trabajo

    include footer
script(src="/js/download.data.js")