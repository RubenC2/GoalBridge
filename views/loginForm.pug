doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    title Admin Dashboard - GoalBridge
    link(rel="stylesheet", href="/css/style.css")

  // Incluir el header y el layout
  include header 
  include layout 

  block content
    .login-container
      h1 Iniciar Sesión

      // Formulario de inicio de sesión
      form(action="/login" method="POST")
        .form-group
          label(for="username") Nombre de Usuario:
          input#username(type="text" name="username" placeholder="Usuario" required)

        .form-group
          label(for="password") Contraseña:
          input#password(type="password" name="password" placeholder="Contraseña" required)

        .form-group
          button(type="submit") Iniciar Sesión

    // Scripts
    script(src="index.js")
    script(src="/js/script.js")
